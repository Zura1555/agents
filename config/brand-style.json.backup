{
  "brand": {
    "name": "Thuong-Tuan Tran",
    "author": "Thuong-Tuan Tran",
    "voice": "Professional & Friendly",
    "tagline": "Sharing insights on technology and personal growth"
  },
  "writingStyle": {
    "tone": {
      "professional": {
        "enabled": true,
        "characteristics": [
          "Knowledgeable and credible",
          "Demonstrates expertise",
          "Uses accurate terminology",
          "Provides evidence-based content",
          "Maintains transparency"
        ]
      },
      "friendly": {
        "enabled": true,
        "characteristics": [
          "Approachable and warm",
          "Conversational but not casual",
          "Inclusive language",
          "Respect for reader's time",
          "Shows personality and authenticity"
        ]
      }
    },
    "language": {
      "voice": "second-person",
      "perspective": "first-person-plural",
      "contractions": "use-sparingly",
      "jargon": "define-or-avoid",
      "acronyms": "expand-on-first-use"
    },
    "structure": {
      "paragraphLength": "3-4 sentences",
      "sentenceLength": "15-20 words average",
      "introductionLength": "150-250 words",
      "conclusionLength": "150-200 words",
      "sectionLength": "300-500 words"
    }
  },
  "contentGuidelines": {
    "technology": {
      "approach": "explanatory and practical",
      "technicalDepth": "intermediate",
      "examples": "abundant and practical",
      "codeFormat": "well-commented and explained",
      "assumptions": "reader has basic understanding"
    },
    "personalDevelopment": {
      "approach": "story-driven and inspirational",
      "tone": "encouraging and empathetic",
      "stories": "authentic and relatable",
      "advice": "specific and actionable",
      "reflection": "questions and exercises"
    }
  },
  "seoPreferences": {
    "keywordStrategy": "natural-integration",
    "keywordDensity": "1-2% for primary",
    "metaTitleLength": "50-60 characters",
    "metaDescriptionLength": "150-160 characters",
    "headerOptimization": true,
    "internalLinking": "strategic",
    "openGraph": {
      "enabled": true,
      "imageDimensions": "1200x630px",
      "descriptionLength": "150-200 characters"
    },
    "twitterCard": {
      "enabled": true,
      "type": "summary_large_image",
      "titleLength": "70 characters",
      "descriptionLength": "150-160 characters"
    }
  },
  "qualityStandards": {
    "minimumWordCount": {
      "tech": 1000,
      "personal-dev": 1200
    },
    "maximumWordCount": {
      "tech": 1500,
      "personal-dev": 2000
    },
    "readTimeTarget": "5-8 minutes",
    "qualityScores": {
      "seo": {
        "minimum": 70,
        "target": 85
      },
      "style": {
        "minimum": 80,
        "target": 90
      },
      "visualEnhancement": {
        "minimum": 70,
        "target": 85,
        "description": "Tables, charts, and image placeholders"
      }
    }
  },
  "publishing": {
    "authorName": "Thuong-Tuan Tran",
    "defaultCategories": [
      "Technology",
      "Personal Development"
    ],
    "defaultTags": [
      "blog",
      "insights",
      "growth"
    ],
    "status": "published",
    "featured": false
  },
  "contentStructure": {
    "introduction": {
      "elements": [
        "engaging-hook",
        "context-setting",
        "value-preview",
        "reader-promise"
      ],
      "imagePlaceholder": "hero-image-or-infographic-recommended"
    },
    "body": {
      "sections": "2-4",
      "subsections": "as-needed",
      "transitions": "smooth-and-logical",
      "examples": "strategically-placed",
      "visualEnhancement": {
        "tables": "use-for-comparisons-and-data",
        "frequency": "1-table-per-major-section",
        "charts": "use-for-data-visualization",
        "imagePlacement": "every-300-500-words"
      }
    },
    "conclusion": {
      "elements": [
        "summary",
        "call-to-action",
        "engagement-invitation"
      ],
      "constraints": {
        "maxParagraphs": 3,
        "maxWords": 200,
        "style": "concise-and-punchy"
      }
    }
  },
  "engagement": {
    "questions": "pose-thoughtful-questions",
    "examples": "provide-practical-examples",
    "takeaways": "list-actionable-takeaways",
    "cta": "clear-next-steps",
    "comments": "invite-discussion",
    "visuals": {
      "tables": "enhance-comprehension",
      "charts": "visualize-data",
      "images": "break-up-text-and-illustrate-concepts"
    }
  },
  "visualGuidelines": {
    "tables": {
      "useCase": "comparisons, features, metrics, pros/cons",
      "format": "markdown-table",
      "explanation": "always-include-brief-summary-after-table"
    },
    "images": {
      "frequency": "1-per-300-500-words",
      "types": ["screenshot", "diagram", "infographic", "photo", "illustration"],
      "placeholderFormat": "üñºÔ∏è Suggested Image Placeholder",
      "requiredFields": ["location", "type", "purpose", "caption", "alt-text"]
    },
    "charts": {
      "useCase": "data-visualization-trends-processes",
      "types": ["bar-chart", "line-graph", "flowchart", "timeline"],
      "dimensions": "1200x630px for meta-image"
    }
  },
  "avoid": {
    "language": [
      "overly-academic-terms",
      "excessive-jargon",
      "passive-voice",
      "complex-sentences",
      "assumptions-without-context"
    ],
    "content": [
      "keyword-stuffing",
      "clickbait-titles",
      "unsubstantiated-claims",
      "promotional-language",
      "plagiarism-or-copying",
      "lengthy-conclusions",
      "repetitive-wrap-up-paragraphs"
    ],
    "formatting": [
      "walls-of-text",
      "inconsistent-styling",
      "broken-links",
      "missing-alt-text",
      "poor-mobile-optimization",
      "missing-visual-elements",
      "tables-without-explanation"
    ]
  },
  "preferences": {
    "contentTypes": ["tech", "personal-dev"],
    "postingFrequency": "3-5 posts per week",
    "seasonality": "year-round",
    "audience": {
      "description": "Developers, tech enthusiasts, and personal growth seekers",
      "experience": "intermediate",
      "interests": ["technology", "development", "self-improvement", "productivity"]
    }
  }
}
